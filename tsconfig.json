{
    "compilerOptions": {
        "target": "es2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "module": "node16",
        "moduleResolution": "node16",
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "es2022",
        ],
        "strict": true,
        ///
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "verbatimModuleSyntax": true,
        "noEmitOnError": true,
        // "erasableSyntaxOnly": true
        "plugins": [],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/.d.ts/*",
        "src"
    ]
}